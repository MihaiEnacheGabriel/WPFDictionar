<Window x:Class="MVPTema1Dictionar.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guess the Word" Height="400" Width="600">
    <Grid>
          <Grid.Background>
      <ImageBrush ImageSource="D:\VSProjects\MVPTema1Dictionar\MVPTema1Dictionar\Images\paper2.jpg"/>
  </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BackButton_Click"/>
        <StackPanel Grid.Column="0" Margin="20,20,0,20" Grid.ColumnSpan="2">
            <TextBlock x:Name="clueLabel" TextWrapping="Wrap" Margin="40 0 40 0" Height="55" Width="400"/>
            <Image x:Name="clueImage" Width="200" Height="77"/>
            <TextBox x:Name="guessTextBox" Height="24" Width="376" Margin="0 50 0 15"/>
            <Button x:Name="previousButton" Content="Previous" Click="PreviousButton_Click" VerticalAlignment="Center" Margin="100 20 100 5"/>
            <Button x:Name="nextButton" Content="Next" Click="NextButton_Click" VerticalAlignment="Center" Margin="100 5 100 5"/>
        </StackPanel>
    </Grid>
</Window>
